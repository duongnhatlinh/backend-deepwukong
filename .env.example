# Application Settings
APP_NAME="DeepWukong API"
VERSION="1.0.0"
DEBUG=True
HOST="0.0.0.0"
PORT=8000

# Security
SECRET_KEY="your-secret-key-change-in-production-make-it-very-long-and-random"
ALLOWED_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# Database
DATABASE_URL="sqlite:///./storage/deepwukong.db"

# File Storage
UPLOAD_DIR="./storage/uploads"
MODELS_DIR="./storage/models"
RESULTS_DIR="./storage/results"
LOGS_DIR="./storage/logs"

# File Limits
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=".c,.cpp,.h,.hpp,.cc,.cxx"

# DeepWukong Configuration
DEEPWUKONG_MODEL_PATH="./storage/models/deepwukong_current.ckpt"
DEEPWUKONG_CONFIG_PATH="./deepwukong/configs/dwk.yaml"
JOERN_PATH="./deepwukong/joern/joern-parse"

# AI Configuration
DEFAULT_CONFIDENCE_THRESHOLD=0.7
AI_TIMEOUT_SECONDS=300

# Redis (optional - for future caching)
REDIS_URL="redis://localhost:6379"